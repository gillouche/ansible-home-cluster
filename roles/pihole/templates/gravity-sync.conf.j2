# Gravity Sync configuration (templated by Ansible)
# Docs: https://github.com/vmstan/gravity-sync

# Primary (source) Pi-hole host connection
GS_PRIMARY_HOST={{ gs_primary_host }}
GS_PRIMARY_USER={{ gs_primary_user }}
GS_PRIMARY_PORT={{ gs_primary_port }}

# Enable Docker integration and set container names
GS_DOCKER_ENABLED=true
GS_DOCKER_CONTAINER={{ gs_container_name }}
# Local and remote (inside container) standard paths
GS_LOCAL_PATH_PIHOLE=/etc/pihole
GS_LOCAL_PATH_DNSMASQ=/etc/dnsmasq.d
GS_REMOTE_PATH_PIHOLE=/etc/pihole
GS_REMOTE_PATH_DNSMASQ=/etc/dnsmasq.d

# Optional: SSH key path (defaults to the user's default key if omitted)
# GS_SSH_KEY=/home/{{ hostvars[inventory_hostname].ansible_ssh_user | default(target_user) }}/.ssh/id_ed25519

# Optional: Log level (info|debug)
# GS_LOG_LEVEL=info
