vrrp_instance VI_Pihole {
    state {{ vrrp_state }}
    interface {{ vrrp_interface }}
    virtual_router_id 51
    priority {{ vrrp_priority }}
    advert_int 1

    authentication {
        auth_type PASS
        auth_pass {{ vrrp_auth_pass }}
    }

    virtual_ipaddress {
        {{ vip_address }}/24
    }
}
